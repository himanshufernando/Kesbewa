<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/babypowder"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageview_specnote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textview_btn_respons"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_logo" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/diavlo_light"
        android:text="@{addresItem.user_address_number}"
        android:textColor="@color/textcolor0"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textview_btn_respons"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="100/5" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_btn_respons"
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:fontFamily="@font/diavlo_medium"
        android:textColor="@color/colorPrimary"
        android:padding="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
